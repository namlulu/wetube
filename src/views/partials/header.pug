header
    a(href="/").header__logo
        i.fas.fa-mitten
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li
                    a(href="/videos/upload") 영상 올리기
                li
                    a(href="/users/edit") #{loggedInUser.name}
                li
                    a(href="/users/logout") 로그아웃
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl === ""
                            span 😀
                        else
                            if loggedInUser.avatarUrl.includes('github')
                                img.header__avatar(src=loggedInUser.avatarUrl)
                            else 
                                img.header__avatar(src="/" + loggedInUser.avatarUrl)
            else
                li
                    a(href="/login")  Login                        
                li
                    a(href="/join").header__btn  Join