extends base.pug

block content 
    div 
        video#preview 
        button#startBtn Start Recording
    if errorMessage
        span=errorMessage
    form(method="post", enctype="multipart/form-data")
        label(for="video") Video File
        input(name="video", type="file", accept="video/*", required, id="video") 
        input(name="title", placeholder="title", required, type="text", maxlength=80)
        input(name="description", placeholder="descrription", required, type="text", minlength=20)
        input(name="hashtags", placeholder="hashtags, separted by comma", required, type="text")
        input(type="submit", value="Upload Video")

block scripts
    script(src="/static/js/recorder.js") 