extends base.pug

block content
    h4 Update Video
    form(method="POST")
        input(name="title", placeholder="title", required, type="text", maxlength=80, value=video.title)
        input(name="description", placeholder="descrription", required, type="text", minlength=20, value=video.description)
        input(name="hashtags", placeholder="hashtags, separted by comma", required, type="text" value=video.hashtags.join())
        input(value="Save", type="submit")